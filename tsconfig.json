{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@config/*": [
				"src/config/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@shared/*": [
				"src/shared/*"
			]
		},
		"skipLibCheck": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	}
}
